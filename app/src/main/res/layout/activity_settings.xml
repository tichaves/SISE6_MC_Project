<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:contentDescription="logo image "
            app:srcCompat="@drawable/insure_image" />

        <ImageView
            android:id="@+id/settings_image"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            app:srcCompat="@drawable/settings" />

        <TextView
            android:id="@+id/textView_settings"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:paddingVertical="@dimen/activity_vertical_margin"
            android:text="@string/textView_settings"
            android:textColor="#020202"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/terms_condition_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions" />

        <Button
            android:id="@+id/privacy_policy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy" />


        <Button
            android:id="@+id/tecnical_support_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tecnical Support" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/settings_logout_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/settings_logout_btn"
                android:textColor="#000000" />

            <Button
                android:id="@+id/settings_act_btn_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/settings_act_btn_menu"
                android:textColor="#050505" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>