<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="601dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:contentDescription="logo image "
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/insure_image" />

        <TextView
            android:id="@+id/home_page_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:text="Welcome to InSure"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <Button
            android:id="@+id/home_page_claim_history_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/documents"
            android:text="@string/home_page_claim_history_btn" />

        <Button
            android:id="@+id/home_page_new_claim_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pneu"
            android:text="@string/home_page_new_claim_btn" />

        <Button
            android:id="@+id/home_page_my_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:drawableTop="@drawable/profile_image"
            android:text="@string/home_page_my_profile_btn" />

        <Button
            android:id="@+id/home_page_settings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/settings"
            android:text="@string/home_page_settings_btn" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>