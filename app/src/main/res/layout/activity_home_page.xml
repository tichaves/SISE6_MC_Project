<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:contentDescription="logo image "
            app:srcCompat="@drawable/insure_image" />


        <TextView
            android:id="@+id/home_page_menu_title"
            android:layout_width="419dp"
            android:layout_height="45dp"
            android:text="@string/home_page_menu_title" />

        <Button
            android:id="@+id/home_page_claim_history_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/documents"
            android:text="@string/home_page_claim_history_btn" />

        <Button
            android:id="@+id/home_page_new_claim_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pneu"
            android:text="@string/home_page_new_claim_btn" />

        <Button
            android:id="@+id/home_page_my_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:drawableTop="@drawable/profile_image"
            android:text="@string/home_page_my_profile_btn" />

        <Button
            android:id="@+id/home_page_settings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/settings"
            android:text="@string/home_page_settings_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_page_help_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_page_help_btn" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>